pair<long long, long long> getMinMax(long long arr[], int n) {
    int minEle = INT_MAX, maxEle = INT_MIN;
    
    for (int i = 0; i < n; i++)
    {
        if (arr[i] > maxEle)
            maxEle = arr[i];
        if (arr[i] < minEle)
            minEle = arr[i];
    }    
    return {minEle, maxEle};
}
